# ── Cloud Deployment Environment Variables ──
# Copy this file to .env and adjust values for your deployment.

# ── Database ──
POSTGRES_USER=memento
POSTGRES_PASSWORD=memento_secret
POSTGRES_DB=memento_mori

# ── Backend ──
DATABASE_URL=postgresql://memento:memento_secret@db:5432/memento_mori
JWT_SECRET=change-me-in-production
JWT_EXPIRES_IN=7d
PORT=3001
NODE_ENV=production
FRONTEND_URL=http://localhost
UPLOAD_DIR=./uploads

# S3 (optional, for production file storage)
# S3_BUCKET=
# S3_REGION=
# S3_ACCESS_KEY=
# S3_SECRET_KEY=

# ── Frontend ──
# Leave empty to use relative paths (same-origin via nginx proxy).
# Set to a full URL if backend is on a different domain.
# VITE_API_URL=

# Base path for the frontend app (default: /).
# Set to /memento-mori/ for GitHub Pages deployment.
# VITE_BASE_PATH=/
